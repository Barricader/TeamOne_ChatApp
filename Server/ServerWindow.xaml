<Window x:Class="Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Server"
        mc:Ignorable="d"
        Title="Server" Height="500" Width="400">
    <Grid Name="grid"
          Background="#D0D0D0">
        <Button Name="startButton"
                Content="Start Server"
                Margin="0 0 140 360"
                Height="20"
                Width="120"
                Click="StartButton_Click"
                Background="Black"
                Foreground="White"/>
        <Button Name="listenButton"
                Content="Start Listening"
                Margin="140 0 0 360"
                Height="20"
                Width="120"
                Click="ListenButton_Click"
                Background="Black"
                Foreground="White"
                IsEnabled="False"/>
        <Button Name="sendButton"
                Content="Send Message"
                Margin="0 340 0 0"
                Height="20"
                Width="120"
                Click="SendButton_Click"
                Background="Black"
                Foreground="White"
                IsEnabled="False"/>
        <Button Name="closeButton"
                Content="Close Connection"
                Margin="140 0 0 300"
                Height="20"
                Width="120"
                Click="CloseButton_Click"
                Background="Black"
                Foreground="White"
                IsEnabled="False"/>

        <Label Name="labelStatus"
               Margin="0 0 140 300"
               Content="No connection..."
               Width="120"
               Height="20"
               VerticalContentAlignment="Center"
               HorizontalContentAlignment="Center"
               Padding="0"/>
        <Label Name="labelReceive"
               Margin="0 0 0 220"
               Width="200"
               Height="20"
               Content="Message received from client"
               VerticalContentAlignment="Center"
               HorizontalContentAlignment="Center"
               Padding="0"/>
        <Label Name="labelSend"
               Margin="0 80 0 0"
               Width="200"
               Height="20"
               Content="Message to send to the client"
               VerticalContentAlignment="Center"
               HorizontalContentAlignment="Center"
               Padding="0"/>

        <TextBox Name="msgReceived"
                 IsEnabled="False"
                 Height="100"
                 Width="240"
                 Margin="0 0 0 100"
                 TextWrapping="Wrap"
                 Text=""/>
        <TextBox Name="msgToSend"
                 Height="100"
                 Width="240"
                 Margin="0 200 0 0"
                 TextWrapping="Wrap"
                 Text="Some text..."/>
    </Grid>
</Window>
